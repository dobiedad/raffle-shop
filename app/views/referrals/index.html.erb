<% content_for :head do %>
  <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
  <script src="https://cdn.jsdelivr.net/npm/wowjs@1.1.3/dist/wow.min.js"></script>
  <script>
    document.addEventListener('turbo:load', function() {
      new WOW({ live: false }).init();
    });
  </script>
<% end %>

<section style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; position: relative; overflow: hidden;">
  <div id="particles-js" data-controller="particles" style="position: absolute; width: 100%; height: 100%; top: 0; left: 0;"></div>

  <div class="container section" style="position: relative; z-index: 1;">
    <!-- Hero Section -->
    <div class="has-text-centered mb-5 wow animate__animated animate__fadeInDown">
      <div class="mb-3">
        <span class="icon is-large" style="font-size: 3.5rem;">🎁</span>
      </div>
      <h1 class="title is-3 has-text-white mb-6">Referral Rewards</h1>
      <p class="subtitle is-5 has-text-white-ter">Share the love and earn free tickets!</p>
    </div>

    <!-- How It Works & Referral Code Section -->
    <div class="columns is-variable is-4 mb-5">
      <!-- How It Works -->
      <div class="column is-8 wow animate__animated animate__fadeInLeft">
        <div class="box" style="background: rgba(255,255,255,0.15); backdrop-filter: blur(10px); border-radius: 12px; border: 1px solid rgba(255,255,255,0.2); padding: 1.5rem;">
          <h2 class="title is-5 mb-3 has-text-white has-text-centered">How Referrals Work</h2>

          <div class="columns is-variable is-3">
            <div class="column">
              <div class="has-text-centered">
                <div class="icon is-large mb-3" style="font-size: 3rem;">📤</div>
                <h3 class="title is-4 mb-3 has-text-white">1. Share Your Code</h3>
                <p class="is-size-6 has-text-white-ter">Share your unique referral code with friends and family</p>
              </div>
            </div>

            <div class="column">
              <div class="has-text-centered">
                <div class="icon is-large mb-3" style="font-size: 3rem;">👥</div>
                <h3 class="title is-4 mb-3 has-text-white">2. They Join</h3>
                <p class="is-size-6 has-text-white-ter">Your friends sign up using your referral code</p>
              </div>
            </div>

            <div class="column">
              <div class="has-text-centered">
                <div class="icon is-large mb-3" style="font-size: 3rem;">🎟️</div>
                <h3 class="title is-4 mb-3 has-text-white">3. You Earn Rewards</h3>
                <p class="is-size-6 has-text-white-ter">Get a free ticket for each of their first 10 raffle entries!</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Your Referral Code -->
      <div class="column is-4 wow animate__animated animate__fadeInRight">
        <div class="box" style="background: rgba(255,255,255,0.15); backdrop-filter: blur(10px); border-radius: 12px; border: 1px solid rgba(255,255,255,0.2); padding: 1.5rem;">
          <h2 class="title is-6 has-text-white mb-3 has-text-centered">Your Referral Code</h2>

          <div class="has-text-centered mb-3">
            <div class="box" style="background: white; border-radius: 8px; padding: 0.75rem;">
              <p class="is-size-7 has-text-grey mb-1">Your Code</p>
              <code class="has-text-dark" style="font-size: 1.25rem; font-weight: 700; letter-spacing: 1px;"><%= current_user.referral_code %></code>
            </div>
          </div>

          <button class="button is-primary is-fullwidth"
                  data-controller="copy"
                  data-copy-text-value="<%= request.base_url %>/users/sign_up?referrer_code=<%= current_user.referral_code %>"
                  data-action="click->copy#copy"
                  style="background: white; color: #667eea; font-weight: 600; border: none; border-radius: 8px;">
            📋 Copy Link
          </button>

          <p class="has-text-centered has-text-white-ter is-size-7 mt-2">
            Share this link with friends!
          </p>
        </div>
      </div>
    </div>

    <!-- Stats Section -->
    <div class="columns is-variable is-3 mb-5">
      <div class="column wow animate__animated animate__fadeInUp" data-wow-delay="0.1s">
        <div class="box has-text-centered" style="background: rgba(255,255,255,0.15); backdrop-filter: blur(10px); border-radius: 12px; border: 1px solid rgba(255,255,255,0.2); padding: 1.5rem;">
          <div class="icon is-large mb-5" style="font-size: 4rem;">👥</div>
          <h3 class="title is-4 has-text-white"><%= @referred_users_count %></h3>
          <p class="is-size-5 has-text-white-ter">Total Referrals</p>
        </div>
      </div>

      <div class="column wow animate__animated animate__fadeInUp" data-wow-delay="0.2s">
        <div class="box has-text-centered" style="background: rgba(255,255,255,0.15); backdrop-filter: blur(10px); border-radius: 12px; border: 1px solid rgba(255,255,255,0.2); padding: 1.5rem;">
          <div class="icon is-large mb-5" style="font-size: 4rem;">🎟️</div>
          <h3 class="title is-4 has-text-white"><%= @total_tickets_earned %></h3>
          <p class="is-size-5 has-text-white-ter">Free Tickets Earned</p>
        </div>
      </div>

      <div class="column wow animate__animated animate__fadeInUp" data-wow-delay="0.3s">
        <div class="box has-text-centered" style="background: rgba(255,255,255,0.15); backdrop-filter: blur(10px); border-radius: 12px; border: 1px solid rgba(255,255,255,0.2); padding: 1.5rem;">
          <div class="icon is-large mb-5" style="font-size: 4rem;">💰</div>
          <h3 class="title is-4 has-text-white"><%= format_currency(@total_value) %></h3>
          <p class="is-size-5 has-text-white-ter">Value Earned</p>
        </div>
      </div>
    </div>

    <div class="has-text-centered mt-5 wow animate__animated animate__fadeIn" data-wow-delay="0.5s">
      <%= link_to "← Back to Profile", profile_path, class: "button is-white is-outlined", style: "border-color: white; color: white; font-weight: 600;" %>
    </div>
  </div>
</section>
