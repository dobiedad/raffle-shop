<section class="section" style="background-color:#f8f9fb; min-height:100vh;">
  <div class="container" style="max-width: 1100px;">

    <!-- Header -->
    <div class="box has-text-centered" style="padding:3rem 2rem; border-radius:14px;">
      <figure class="image is-128x128 is-inline-block mb-3">
        <img class="is-rounded" src="https://i.pravatar.cc/150?img=12" alt="Profile photo">
      </figure>

      <h1 class="title is-4 mb-1"><%= current_user.email %></h1>
      <p class="is-size-7 has-text-grey mb-2">
        Member since <strong><%= current_user.created_at.strftime("%B %Y") rescue "June 2024" %></strong>
      </p>

      <div class="tags is-centered mb-4">
        <span class="tag is-light is-info">Verified</span>
        <span class="tag is-light is-success">Active</span>
      </div>

      <div class="buttons is-centered">
        <%= link_to "Edit Profile", edit_user_registration_path, class: "button is-primary is-small" %>
        <%= link_to "My Raffles", raffles_path, class: "button is-light is-small" %>
      </div>
    </div>

    <!-- Dashboard Grid -->
    <div class="columns is-multiline mt-6">

      <!-- Stats -->
      <div class="column is-one-third">
        <div class="box has-text-centered" style="border-radius:12px;">
          <h2 class="title is-6 mb-3">🎟️ Tickets Entered</h2>
          <p class="is-size-3 has-text-weight-semibold">24</p>
        </div>
      </div>

      <div class="column is-one-third">
        <div class="box has-text-centered" style="border-radius:12px;">
          <h2 class="title is-6 mb-3">💰 Total Spent</h2>
          <p class="is-size-3 has-text-weight-semibold">$92.50</p>
        </div>
      </div>

      <div class="column is-one-third">
        <div class="box has-text-centered" style="border-radius:12px;">
          <h2 class="title is-6 mb-3">🏆 Raffles Won</h2>
          <p class="is-size-3 has-text-weight-semibold">2</p>
        </div>
      </div>

      <!-- Wallet -->
      <div class="column is-half">
        <div class="box" style="border-radius:12px;">
          <div class="is-flex is-justify-content-space-between is-align-items-center">
            <div>
              <h2 class="title is-6 mb-2">Wallet Balance</h2>
              <p class="is-size-4 has-text-weight-semibold">$42.00</p>
            </div>
            <div class="buttons">
              <%= link_to "Add Funds", "#", class: "button is-primary is-small" %>
              <%= link_to "Withdraw", "#", class: "button is-light is-small" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Achievements -->
      <div class="column is-half">
        <div class="box" style="border-radius:12px;">
          <h2 class="title is-6 mb-3">Achievements</h2>
          <div class="tags">
            <span class="tag is-success is-light">🏆 First Win</span>
            <span class="tag is-info is-light">🎟️ 10+ Tickets</span>
            <span class="tag is-warning is-light">⭐ Trusted User</span>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="column is-full">
        <div class="box" style="border-radius:12px;">
          <h2 class="title is-6 mb-4">Recent Activity</h2>
          <table class="table is-fullwidth is-hoverable is-size-7">
            <tbody>
              <tr>
                <td>🎟️ Joined <strong>PS5 Giveaway</strong> — 2 tickets</td>
                <td class="has-text-right has-text-grey">2d ago</td>
              </tr>
              <tr>
                <td>🏆 Won <strong>Apple Watch Ultra</strong></td>
                <td class="has-text-right has-text-grey">Oct 8</td>
              </tr>
              <tr>
                <td>💳 Added $25 wallet credit</td>
                <td class="has-text-right has-text-grey">Oct 5</td>
              </tr>
            </tbody>
          </table>
          <%= link_to "View Full History", "#", class: "has-text-link is-size-7" %>
        </div>
      </div>

    </div>

  </div>
</section>
