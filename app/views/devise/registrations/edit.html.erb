<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column">

        <nav class="breadcrumb mb-5" aria-label="breadcrumbs">
          <ul>
            <li><%= link_to "Profile", profile_path %></li>
            <li class="is-active"><a href="#" aria-current="page">Edit</a></li>
          </ul>
        </nav>

        <h1 class="title">Edit Profile</h1>
        <p class="subtitle is-6 has-text-grey mb-5">Update your account settings</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :profile_image, "Profile Image", class: "label" %>
            <div class="control">
              <% if resource.profile_image.attached? && resource.profile_image.persisted? %>
                <div class="mb-3">
                  <%= image_tag resource.profile_image.variant(resize_to_limit: [200, 200]), class: "image is-128x128", style: "border-radius: 50%; object-fit: cover;" %>
                </div>
              <% end %>
              <div class="file has-name is-fullwidth">
                <label class="file-label">
                  <%= f.file_field :profile_image, class: "file-input", accept: "image/png,image/jpeg,image/gif,image/webp", id: "profile-image-input" %>
                  <span class="file-cta">
                    <span class="file-icon">
                      <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label">
                      Choose a fileâ€¦
                    </span>
                  </span>
                  <span class="file-name" id="profile-image-name">
                    <% if resource.profile_image.attached? && resource.profile_image.persisted? %>
                      <%= resource.profile_image.filename %>
                    <% else %>
                      No file selected
                    <% end %>
                  </span>
                </label>
              </div>
              <% if resource.profile_image.attached? && resource.profile_image.persisted? %>
                <label class="checkbox mt-2">
                  <%= f.check_box :remove_profile_image %>
                  Remove current profile image
                </label>
              <% end %>
              <p class="help">JPEG, PNG, GIF, or WebP (max 5MB)</p>
            </div>
          </div>

          <div class="field">
            <%= f.label :email, class: "label" %>
            <div class="control">
              <%= f.email_field :email, autocomplete: "email", class: "input" %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <%= render UI::NotificationBanner.new(
              type: 'info',
              message: "Currently waiting confirmation for: #{resource.unconfirmed_email}",
              centered: false
            ) %>
          <% end %>

          <div class="field">
            <%= f.label :password, "New Password", class: "label" %>
            <p class="help">Leave blank if you don't want to change it</p>
            <div class="control">
              <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
            </div>
            <% if @minimum_password_length %>
              <p class="help"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "Confirm New Password", class: "label" %>
            <div class="control">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :current_password, class: "label" %>
            <p class="help">We need your current password to confirm your changes</p>
            <div class="control">
              <%= f.password_field :current_password, autocomplete: "current-password", class: "input", required: true %>
            </div>
          </div>

          <div class="field is-grouped">
            <div class="control">
              <%= f.submit "Update Profile", class: "button is-primary" %>
            </div>
            <div class="control">
              <%= link_to "Cancel", profile_path, class: "button is-light" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const fileInput = document.getElementById('profile-image-input');
    const fileName = document.getElementById('profile-image-name');
    
    if (fileInput && fileName) {
      fileInput.addEventListener('change', function(e) {
        if (e.target.files.length > 0) {
          fileName.textContent = e.target.files[0].name;
        } else {
          fileName.textContent = 'No file selected';
        }
      });
    }
  });
</script>
