<section class="section" style="background-color:#fafafa; min-height:100vh;" data-controller="raffle-preview">
  <div class="container">
    <%= render UI::PageHeader.new(
      title: '🎟️ Create a New Raffle',
      subtitle: 'Add your item details, pricing, and photos — your raffle page will be generated automatically.'
    ) %>

    <div class="columns is-variable is-7">
      <!-- Main Form -->
      <div class="column is-three-quarters">
        <%= render "form", raffle: @raffle %>
      </div>

      <!-- Secondary Sidebar -->
      <div class="column is-one-quarter">
        <div class="is-size-7 has-text-grey-dark" style="position: sticky; top: 2rem;">

          <p class="mb-3"><strong>Tips for Success</strong></p>
          <ul class="content">
            <li>📸 Use bright, clear images</li>
            <li>💰 Keep ticket prices proportional to goal</li>
            <li>🕐 Short raffles (5–7 days) drive urgency</li>
            <li>🎯 Honest, concise descriptions convert better</li>
          </ul>

          <hr class="my-4">
          <p class="mb-2"><strong>Live Preview</strong></p>

          <!-- Raffle Card Preview -->
          <% if @preview_raffle %>
            <div id="preview-card" style="max-width: 100%;">
              <%= render UI::RaffleCard.new(raffle: @preview_raffle) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
