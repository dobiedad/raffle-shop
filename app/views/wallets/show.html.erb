<div class="container wallet-page mt-5 mb-5">
  <%= render UI::PageHeader.new(title: 'ðŸ’° My Wallet') %>

  <section class="hero is-small is-walletGradient is-light">
    <div class="hero-body has-text-centered">
      <p class="heading has-text-light">Current Balance</p>
      <p class="title is-1 has-text-light"><%= format_currency(@wallet.balance) %></p>
      <div class="buttons is-centered mt-2">
        <%= link_to "Add Funds", "#", class: "button is-primary is-light", onclick: "alert('Add funds feature coming soon!'); return false;" %>
        <%= link_to "Withdraw", "#", class: "button is-light", onclick: "alert('Withdraw feature coming soon!'); return false;" %>
      </div>
    </div>
  </section>

  <div class="box mt-5">
    <div class="is-flex is-justify-content-space-between is-align-items-center mb-3">
      <h2 class="title is-4 mb-0">ðŸ“‹ Transaction History</h2>
      <p class="has-text-grey is-size-7">
        <%= @pagy.count %> total <%= 'transaction'.pluralize(@pagy.count) %>
        <% if @pagy.pages > 1 %> Â· Page <%= @pagy.page %> of <%= @pagy.pages %><% end %>
      </p>
    </div>

    <% if @transactions.any? %>
      <% @transactions.each do |t| %>
        <article class="media box is-shadowless mb-3">
          <div class="media-left is-hidden-touch">
            <p class="is-size-7">
              <%= t.created_at.strftime('%b %d, %Y') %><br>
              <span class="has-text-grey"><%= t.created_at.strftime('%I:%M %p') %></span>
            </p>
          </div>

          <div class="media-content">
            <p class="is-size-7 has-text-grey is-hidden-desktop">
              <%= t.created_at.strftime('%b %d, %Y Â· %I:%M %p') %>
            </p>
            <p class="is-size-6 mb-4"><%= t.description %></p>
            <span class="tag is-light is-<%= t.transaction_type_display_type %>">
              <%= t.icon %> <%= t.transaction_type.humanize %>
            </span>
          </div>

          <div class="media-right has-text-right" style="min-width: 120px;">
            <span class="has-text-weight-semibold <%= t.credit? ? 'has-text-success' : 'has-text-danger' %>">
              <%= t.credit? ? '+' : '-' %><%= format_currency(t.amount) %>
            </span>
          </div>
        </article>
      <% end %>

      <div class="mt-4">
        <%= render UI::Pagination.new(pagy: @pagy) %>
          <p class="has-text-centered is-size-7 has-text-grey mt-2">
            Showing <%= @pagy.from %>â€“<%= @pagy.to %> of <%= @pagy.count %>
          </p>
      </div>
    <% else %>
      <%= render UI::EmptyState.new(
        title: 'No transactions yet',
        description: 'Your wallet activity will appear here.'
      ) %>
    <% end %>
  </div>
</div>
