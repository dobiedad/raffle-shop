<section class="hero is-primary is-fullheight-with-navbar">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-1">
        Raffle Shop
      </h1>
      <p class="subtitle is-3">
        Welcome!
      </p>
      <% if user_signed_in? %>
        <p class="mb-4">You're signed in as <%= current_user.email %></p>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "button is-light is-medium" %>
      <% else %>
        <div class="buttons is-centered">
          <%= link_to "Sign In", new_user_session_path, class: "button is-light is-medium" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "button is-light is-outlined is-medium" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
