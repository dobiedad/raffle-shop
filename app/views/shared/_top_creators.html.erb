<div class="box">
  <h3 class="title is-6 mb-4">ðŸŒŸ Top Creators</h3>
  <% top_creators = User.where.not(id: current_user&.id).order(followers_count: :desc).limit(5) %>
  <% if top_creators.present? %>
    <% top_creators.each do |creator| %>
      <div class="is-flex is-align-items-center is-justify-content-space-between mb-4">
        <%= link_to user_path(creator), class: "is-flex is-align-items-center", style: "gap: 0.75rem; flex: 1;" do %>
          <%= image_tag user_avatar_url(creator), alt: creator.email, class: "is-rounded", style: "width: 40px; height: 40px;" %>
          <div>
            <p class="has-text-weight-semibold is-size-7"><%= creator.email %></p>
            <p class="is-size-7 has-text-grey"><%= creator.followers_count %> followers</p>
          </div>
        <% end %>
        <%= follow_button_for(creator) %>
      </div>
    <% end %>
  <% else %>
    <%= render UI::EmptyState.new(
      title: 'No creators yet'
    ) %>
  <% end %>
</div>

