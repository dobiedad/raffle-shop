<% flash.each do |type, message| %>
  <% next if message.blank? %>
  <% notification_type = case type.to_s
                         when 'notice' then 'success'
                         when 'alert' then 'danger'
                         when 'info' then 'info'
                         else 'info'
                         end %>
  <%= render UI::NotificationBanner.new(
    type: notification_type,
    message: message,
    dismissible: true,
    centered: false
  ) %>
<% end %>
