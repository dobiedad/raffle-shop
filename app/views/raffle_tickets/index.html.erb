<section class="section" style="background-color:#f8f9fb; min-height:100vh;">
  <div class="container">
    <h1 class="title is-3 has-text-centered mb-5">üéüÔ∏è My Tickets</h1>

    <% if @raffle_tickets.any? %>
      <% grouped = @raffle_tickets.group_by(&:raffle) %>

      <% grouped.each do |raffle, tickets| %>
        <div class="box mb-6" style="border-radius:12px;">
          <div class="is-flex is-align-items-center">
            <div class="u-mrXS">
              <h2 class="title is-5 mb-1">
                <%= link_to raffle.name, raffle, class: "has-text-dark" %>
              </h2>
              <p class="is-size-7 has-text-grey">
                <%= truncate(strip_tags(raffle.general_description.to_s), length: 100) %>
              </p>
            </div>

            <div class="ml-auto">
              <%= link_to "View Raffle", raffle, class: "button is-small is-primary is-light" %>
            </div>
          </div>

          <hr class="my-3">

          <div class="tickets-list">
            <% tickets.each do |ticket| %>
              <div class="ticket-stub">
                <div class="ticket-main">
                  <h4 class="ticket-title">üéüÔ∏è Ticket #<%= ticket.ticket_number %></h4>
                  <p class="is-size-7 has-text-grey mb-1">
                    Purchased <%= time_ago_in_words(ticket.purchased_at) %> ago
                  </p>
                  <p class="is-size-7 has-text-grey-light">Raffle: <%= raffle.name %></p>
                </div>
                <div class="ticket-side">
                  <span class="ticket-code"><%= ticket.id.to_s.last(8).upcase %></span>
                </div>
              </div>
            <% end %>
          </div>


          <div class="has-text-right mt-4">
            <p class="is-size-7 has-text-grey">Total tickets:
              <strong><%= tickets.count %></strong>
            </p>
            <p class="is-size-7 has-text-grey">Total spent:
              <strong>$<%= number_with_precision(tickets.sum(&:price), precision: 2) %></strong>
            </p>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="box has-text-centered">
        <p class="title is-4 mb-2">No Tickets Yet</p>
        <p class="subtitle is-6 has-text-grey">You haven‚Äôt purchased any raffle tickets.</p>
        <%= link_to "Browse Raffles", raffles_path, class: "button is-primary is-medium mt-3" %>
      </div>
    <% end %>
  </div>
</section>

<style media="screen">
  .tickets-list {
  display: flex;
  flex-wrap: wrap;
  gap: 1.2rem;
}

.ticket-stub {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  width: 375px;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 3px 8px rgba(0,0,0,0.05);
  overflow: hidden;
  transition: transform 0.15s ease-in-out;
}

.ticket-stub:hover {
  transform: translateY(-3px);
}

/* left section */
.ticket-main {
  flex: 1;
  padding: 1rem 1.25rem;
  background: linear-gradient(135deg, #fafafa, #f3f3f9);
  position: relative;
}

/* right perforated section */
.ticket-side {
  width: 90px;
  background: repeating-linear-gradient(
    45deg,
    #f6f6fa,
    #f6f6fa 4px,
    #ededf5 4px,
    #ededf5 8px
  );
  display: flex;
  align-items: center;
  justify-content: center;
  border-left: 2px dashed #d3d3e0;
  position: relative;
}

/* notch cutouts */
.ticket-stub::before,
.ticket-stub::after {
  content: "";
  position: absolute;
  width: 22px;
  height: 22px;
  background: #f8f9fb;
  border-radius: 50%;
  left: calc(100% - 90px - 11px);
}

.ticket-stub::before {
  top: -11px;
}

.ticket-stub::after {
  bottom: -11px;
}

.ticket-title {
  font-weight: 600;
  font-size: 0.95rem;
  color: #2c2c2c;
}

.ticket-code {
  writing-mode: vertical-rl;
  transform: rotate(180deg);
  font-family: monospace;
  font-size: 0.8rem;
  letter-spacing: 1px;
  color: #4f46e5;
  opacity: 0.9;
}

.raffle-image {
  width: 96px;
  height: 96px;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  display: inline-block;
  background: #f4f4f4;
}

.raffle-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
  display: block;
}


</style>
